<UserControl
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    x:Class="SilverlightApplication.Page">
    
    <StackPanel Background="LightYellow">
        
        <TextBlock FontSize="20" FontWeight="Bold">
            This is a Silverlight-Based Application.
        </TextBlock>
        
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="msgTextBox" Text="Hello from Silverlight" />
            <Button x:Name="sendMessageToWPFButton" Content="Send Message to WPF" Click="sendMessageToWPFButton_Click" />
        </StackPanel>
        
        <TextBlock x:Name="msgTextBlock" FontStyle="Italic" />
        
    </StackPanel>
    
</UserControl>
